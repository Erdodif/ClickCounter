<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainLandscapeActivity"
    android:background="#000">

    <TextView
        android:id="@+id/lSzam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerInParent="true"
        android:textColor="@color/colorKek"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/lPlusz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/lSzam"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:paddingHorizontal="25sp"
        android:paddingVertical="10sp"
        android:text="+"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/lMinusz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/lSzam"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:paddingHorizontal="25sp"
        android:paddingVertical="10sp"
        android:text="-"
        android:textColor="#FFF"
        android:textSize="20sp" />
</RelativeLayout>